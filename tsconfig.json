{
    "compilerOptions": {
        "preserveConstEnums": true,
        "allowJs": true,
        "lib": ["es2015"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": ".build",
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "./"
    ]
}